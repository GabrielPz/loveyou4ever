generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Plans {
  BASIC
  PREMIUM
  SUPER_PREMIUM
}

model User {
  id            String          @id @default(uuid())
  email         String          @unique
  password      String
  role          Role            @default(USER)
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  Relationships Relationships[]

  @@map("users")
}

model Relationships {
  id        String     @id @default(uuid())
  userId    String
  paymentId String
  user      User       @relation(fields: [userId], references: [id])
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
  Payments  Payments[]

  @@map("relationhips")
}

model Payments {
  id           String        @id @default(uuid())
  relationShip String
  relationship Relationships @relation(fields: [relationShip], references: [id], onDelete: Cascade)
  plan         Plans         @default(BASIC)
  amount       Float
  status       String        @default("pending")
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")

  @@map("payments")
}
